{
  "name": "@textile/ipfs-lite",
  "version": "0.1.5",
  "description": "A lightweight minimal IPFS peer for typescript/javascript.",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "pretest": "npm run bootstrap && npm run lint && npm run build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "eslint --fix --ext .js,.ts packages/*/src/**/*",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "TS_NODE_FILES=true mocha",
    "test:browser": "polendina --cleanup packages/*/src/**/*.spec.ts --webpack-config webpack.test.js",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textileio/js-ipfs-lite.git"
  },
  "keywords": [
    "ipfs",
    "lite",
    "dag",
    "typescript",
    "browser",
    "node"
  ],
  "author": "Carson Farmer <carson@textile.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/textileio/js-ipfs-lite/issues"
  },
  "homepage": "https://github.com/textileio/js-ipfs-lite#readme",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.7",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.0",
    "delay": "^4.3.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^7.0.0",
    "polendina": "^1.0.0",
    "prettier": "^1.18.2",
    "terser-webpack-plugin": "^2.2.1",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.6.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {}
}
