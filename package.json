{
  "name": "@textile/ipfs-lite",
  "version": "0.1.5",
  "description": "A lightweight minimal IPFS peer for typescript/javascript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": {
    "./setup/node": "./setup/browser"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --verbose --no-watchman",
    "lint": "eslint --fix --ext .mjs,.js,.jsx,.ts,.tsx src",
    "docs:build": "jsdoc -c jsdoc.json",
    "docs:serve": "npm run docs:build && http-server docs/",
    "docs": "npm run docs:build",
    "browser:build": "NODE_ENV=production webpack --mode production",
    "browser:serve": "npm run browser:build && http-server dist/browser --gzip",
    "browser": "npm run browser:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textileio/js-ipfs-lite.git"
  },
  "keywords": [
    "ipfs",
    "lite",
    "dag",
    "typescript",
    "browser",
    "node"
  ],
  "author": "Carson Farmer <carson@textile.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/textileio/js-ipfs-lite/issues"
  },
  "homepage": "https://github.com/textileio/js-ipfs-lite#readme",
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-environment-node": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
  }
}
